{
  "title": "Game",
  "type": "object",
  "definitions": {
    "Player": {
      "type": "object",
      "properties": {
        "clientId": { "type": "string", "default": "" },
        "name": { "type": "string", "default": "" }
      },
      "required": ["clientId","name"]
    },
    "Tile": {
      "type": "object",
      "properties": {
        "figure": {
          "type": "string",
          "enum": [
            "Empty",
            "Odin",
            "Monster",
            "Warrior",
            "Throne",
            "Exit"
          ]
        },
        "isSelected": {
          "type": "boolean"
        },
        "isEnabled": {
          "type": "boolean"
        },
        "isMoveEnabled": {
          "type": "boolean"
        }
      },
      "required": ["figure"]
    },
    "TilePosition": {
      "type": "object",
      "properties": {
        "x": { "type": "integer", "minimum": 1, "maximum": 11 },
        "y": { "type": "integer", "minimum": 1, "maximum": 11 }
      },
      "required": ["x", "y"]
    },
    "Board": {
      "type": "object",
      "properties": {
        "rows": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "cols": {
                "type": "array",
                "items": { "$ref": "#/definitions/Tile" },
                "minItems": 11,
                "maxItems": 11
              }
            },
            "required": ["cols"]
          },
          "minItems": 11,
          "maxItems": 11
        },
        "selectedTile": {
          "$ref": "#/definitions/TilePosition"
        }
      },
      "required": ["rows"]
    }
  },
  "properties": {
    "id": { "type": "string" },
    "type": { "type": "string" },
    "players": {
      "type": "object",
      "properties": {
        "monster": { "$ref": "#/definitions/Player" },
        "viking": { "$ref": "#/definitions/Player" },
        "active": {
          "type": "string",
          "enum": ["Monster", "Viking"],
          "default": "Viking"
        }
      },
      "required": ["active", "viking", "monster"]
    },
    "state": {
      "type": "string",
      "enum": ["open", "started", "over"]
    },
    "board": { "$ref": "#/definitions/Board" }
  },
  "required": ["type", "players", "state", "board"]
}
